# class                 border  backgr. text    indicator
client.focused          #004400 #00BB00 #00dddd #000099
client.focused_inactive #002200 #004400 #009999 #000066
#client.unfocused        #333333 #222222 #888888 #292d2e
#client.urgent           #2f343a #900000 #ffffff #900000

# Move back to workspace where you came from by hitting same keys twice
workspace_auto_back_and_forth yes

# Screenshots (using scrot)
bindsym --release Print exec scrot -e 'mv $f ~/Downloads/'
bindsym --release $win+Print exec scrot -s -e 'mv $f ~/Downloads/'

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar{
    position bottom
    #status_command i3status
    status_command i3blocks

    # Show system tray only on primary monitor (as defined by xrandr) [disable
    # for now, seems to be unstable]
    #tray_output primary

    colors{
        background #222222
        # class            border  backgr. text
        #focused_workspace  #082c00 #093600 #8fa8c9
        #inactive_workspace #dddddd #444444 #dddddd
    }
}

