# Stolen from: http://www.linuxized.com/2010/08/urxvt-the-unbeatable-terminal/URxvt*

loginShell:true
URxvt*transparent:true
URxvt*shading:5
URxvt*background:Black
URxvt*foreground:White
URxvt*cursorColor:Light Green
URxvt*scrollBar:true
URxvt*scrollBar_right:true
URxvt*scrollBar_floating:false
URxvt*scrollstyle:plain
URxvt*scrollTtyOutput:false
URxvt*scrollWithBuffer:true
URxvt*scrollTtyKeypress:true
URxvt*secondaryScroll:true

URxvt*termName: rxvt-256color

URxvt.geometry: 80x-1

# how many lines you want it to save per session
URxvt*saveLines:32767
URxvt*troughColor:#000000
URxvt*scrollColor:#666666
URxvt*font: xft:Dejavu Sans Mono:pixelsize=18:antialias=true
# Turn off bold fonts by setting it to the same font as before (256 colors should be enough)
URxvt*boldFont: xft:DejaVu Sans Mono:pixelsize=18:antialias=true
URxvt*letterSpace: -1

# with this set to true, when an app sends a bell to the terminal, awesome hilights the appropriate tag(s)
URxvt*urgentOnBell: true

URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

